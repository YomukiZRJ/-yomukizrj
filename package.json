{
	"name": "yomukizrj",
	"version": "1.0.0",
	"description": "个人日常用的小工具",
	"scripts": {
		"prepare": "husky install",
		"cli:add": "pnpm run add --filter yomuki-template-cli",
		"cli:create": "pnpm run create --filter yomuki-template-cli",
		"cli:ls": "pnpm run ls --filter yomuki-template-cli",
		"husky": "pnpm run husky --filter create-ym-husky",
		"lint": "eslint --ext .js,.ts ./",
		"lint:fix": "eslint --fix --ext .js,.ts ./",
		"prettier": "prettier --check --ignore-path .eslintignore ./",
		"prettier:fix": "prettier --write --ignore-path .eslintignore ./",
		"lint:lint-staged": "lint-staged",
		"commit": "git-cz"
	},
	"author": "yomuki",
	"license": "ISC",
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@typescript-eslint/eslint-plugin": "^5.36.1",
		"@typescript-eslint/parser": "^5.36.1",
		"commitizen": "^4.2.5",
		"cz-git": "^1.3.11",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.0",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"typescript": "^4.8.2"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-git"
		}
	}
}
